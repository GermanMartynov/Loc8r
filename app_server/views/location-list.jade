extends layout

include _includes/sharedHTMLfunctions

block content
    #banner.page-header
        .row
            .col-lg-6
                h1= pageHeader.title
                  small &nbsp;&nbsp;#{pageHeader.strapline}
    .row
        .col-xs-12.col-sm-8
            row.list-group
                each loc in locations
                  .col-xs-12.list-group-item
                    h4
                        a(href="/location") #{loc.name}

                        small &nbsp;
                        +outputRating(loc.rating)

                        span.badge.pull-right.badge-default #{loc.distance}
                    p.address= loc.address
                    p
                      each item in loc.facilities
                        span.label.label-warning #{item}
                        | &nbsp;

        col-xs-12.col-sm-4
            p.lead= sidebar
